layout-macro-def(schedule-card) {
  params {
    param (schedule) {
      type (Schedule) min (Required) max (One)
    }
  }

  content {
    cell-area {
      slot1 {
        image {
          url ("images/owl-logo.png")
          background-color (White)
          shape (Square)
        }
      }
      slot2 {
        content {
          order (PrimarySecondary) 
          primary ("#{value(schedule.series[0].status)}: #{value(schedule.series[0].name)}")
        }
      }
    }
  }
}
